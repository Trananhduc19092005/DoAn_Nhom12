@model NewspaperDoAnV2.Models.Newspaper

@{
    ViewBag.Title = "Delete";
    Layout = "~/Areas/AdminArea/Views/Shared/_adminlayout.cshtml";
}

<h2> Xóa Bài Báo </h2>

<h3> Bạn Có Chắc Chắn Rằng Bạn Muốn xóa bài báo này không </h3>
<div>
    <h4>Newspaper</h4>
    <hr />
    <div class="card">
        <div class="card-header">
            <div class="mt-3 mb-3">
                <h4> Tiêu Đề </h4>
                @Html.DisplayFor(model => model.Newspaper_tieude)
            </div>

            <div>
                <h4> Tiêu Đề Phụ </h4>
                @Html.DisplayFor(model => model.Newspaper_tieudephu)
            </div>
        </div>

        <div class="card-body d-flex flex-column">
            <div>
                @Html.DisplayFor(model => model.Newspaper_noidung)
            </div>

            <div>
                @Html.DisplayFor(model => model.Newspaper_anh)
            </div>
        </div>

        <div class="card-footer d-flex flex-column">
            <div>
                <h4> Danh Mục </h4>
                @Html.DisplayFor(model => model.Danh_muc.danhmuc_noidung)
            </div>
        </div>

        <div class="card-footer">
            <div>
                <h4> Người Viết </h4>
                @Html.DisplayFor(model => model.User.UserName)
            </div>
        </div>

    </div>

    @using (Html.BeginForm()) {
        @Html.AntiForgeryToken()

        <div class="form-actions no-color mt-3">
            <input type="submit" value="Delete" class="btn btn-danger" /> |
            @Html.ActionLink("Back to List", "Index" , "" , new {@class = "btn btn-success"} )
        </div>
    }
</div>
